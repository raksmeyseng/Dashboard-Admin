@model ArchtistStudio.Modules.TopManagement.UpdateTopManagementRequest

<div>
    <h4 class="font-weight-bold py-3 mb-4">
        Edit Top Management
    </h4>

    <div class="row pt-3">
        <div class="col-md-12">
            <form asp-controller="topmanagement" asp-action="update" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                `
               <div class="row m-1">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" placeholder="Name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ImagePath" class="control-label"></label>
                            <input type="file" asp-for="ImagePath" class="form-control" placeholder="Upload Image" />
                            <span asp-validation-for="ImagePath" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row m-1">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <textarea asp-for="Description" class="form-control" placeholder="Description"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-end m-1">
                    <button type="submit" class="btn btn-primary m-2">Save changes</button>
                    <a class="btn btn-dark m-2 text-white text-decoration-none" asp-controller="contact"
                        asp-action="profile">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
