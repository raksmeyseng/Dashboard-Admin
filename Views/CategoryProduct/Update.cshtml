@model ArchtistStudio.Modules.CategoryProduct.UpdateCategoryProductRequest

<div>
    <h4 class="font-weight-bold py-3 mb-4">
        Update CategoryProduct
    </h4>
    <div class="row pt-2">
        <div class="col-md-12">
            <form asp-controller="categoryproduct" asp-action="update" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
               <div class="row m-1">
                      <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" placeholder="Name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-end m-2">
                    <button type="submit" class="btn btn-primary m-2">Save changes</button>
                    <button type="Cancel" class="btn btn-dark m-2">
                        <a class="text-white text-decoration-none" asp-controller="category"
                            asp-action="gets">Cancel</a>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>