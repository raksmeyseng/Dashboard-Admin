@model ArchtistStudio.Modules.Project.InsertProjectRequest


<div>
    <h4 class="font-weight-bold py-3 mb-4">
        Insert Project
    </h4>
    <div class="row pt-2">
        <div class="col-md-12">
            <form asp-action="insert" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row m-1">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ProjectName" class="control-label"></label>
                            <input asp-for="ProjectName" class="form-control" placeholder="Project Name" />
                            <span asp-validation-for="ProjectName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Location" class="control-label"></label>
                            <input asp-for="Location" class="form-control" placeholder="Location" />
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row m-1">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Client" class="control-label"></label>
                            <input asp-for="Client" class="form-control" placeholder="Client" />
                            <span asp-validation-for="Client" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Size" class="control-label"></label>
                            <input asp-for="Size" class="form-control" placeholder="Size" />
                            <span asp-validation-for="Size" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Status" class="control-label"></label>
                            <input asp-for="Status" class="form-control" placeholder="Status" />
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row m-1">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="ProjectType" class="control-label"></label>
                            <input asp-for="ProjectType" class="form-control" placeholder="ProjectType" />
                            <span asp-validation-for="ProjectType" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-end m-1">
                    <button type="submit" class="btn btn-primary m-2">Save changes</button>
                    <button type="Cancel" class="btn btn-dark m-2">
                        <a class="text-white text-decoration-none" asp-controller="project" asp-action="gets">Cancel</a>
                    </button>
                </div>
            </form>
        </div>
    </div>

</div>