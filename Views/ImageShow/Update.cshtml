@model ArchtistStudio.Modules.ImageShow.UpdateImageShowRequest

<div>
    <h4 class="font-weight-bold py-3 mb-4">Add Image Show</h4>

    <div class="row pt-2">
        <div class="col-md-12">
            <form asp-controller="imageshow" asp-action="update" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <input type="hidden" asp-for="ProjectId" />

                <div class="row m-1">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="ImagePath" class="control-label">Image</label>
                            <input type="file" asp-for="ImagePath" class="form-control" />
                            <span asp-validation-for="ImagePath" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row m-1">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="Description" class="control-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row m-1">
                    <div class="d-flex justify-content-end m-1">
                        <button type="submit" class="btn btn-primary m-2">Save changes</button>
                        <button type="button" class="btn btn-dark m-2">
                            <a class="text-white text-decoration-none" asp-controller="Project" asp-action="Gets">Cancel</a>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
