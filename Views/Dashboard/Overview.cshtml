
<h2>Dashboard</h2>

<div class="container">
    <div class="row">
        <!-- Example of cards for stats -->
        <div class="col-md-4">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Users</h5>
                    <p class="card-text">1234</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Orders</h5>
                    <p class="card-text">567</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <h5 class="card-title">Pending Issues</h5>
                    <p class="card-text">45</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Example for a chart -->
    <div class="row mt-5">
        <div class="col-md-12">
            <h3>Monthly Sales</h3>
            <canvas id="salesChart" width="400" height="200"></canvas>
        </div>
    </div>
</div>