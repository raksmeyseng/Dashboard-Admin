@model Tuple<
    List<ArchtistStudio.Modules.CategoryArchitecture.ListCategoryArchitectureResponse>,
    List<ArchtistStudio.Modules.CategoryEngineering.ListCategoryEngineeringResponse>,
    List<ArchtistStudio.Modules.CategoryProduct.ListCategoryProductResponse>>
<div class="container">
    <!-- Centered Tabs Navbar -->
    <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <!-- Centered Tabs -->
            <div class="mx-auto">
                <ul class="nav nav-tabs justify-content-center" id="myTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <a class="nav-link active text-hover" id="architecture-tab" data-bs-toggle="tab" href="#architecture"
                            role="tab" aria-controls="architecture" aria-selected="true">Architecture</a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link text-hover" id="engineering-tab" data-bs-toggle="tab" href="#engineering" role="tab"
                            aria-controls="engineering" aria-selected="false">Engineering</a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link text-hover" id="product-tab" data-bs-toggle="tab" href="#product" role="tab"
                            aria-controls="product" aria-selected="false">Product</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Tabs Content -->
    <div class="tab-content" id="myTabContent">
        <!-- Architecture Tab -->
        <div class="tab-pane fade show active" id="architecture" role="tabpanel" aria-labelledby="architecture-tab">
            <div class="card-body">
                <div class="text-end m-2">
                    <a class="text-decoration-none btn btn-outline-dark" href="/categoryarchitecture/insert">Post Category Architecture</a>
                </div>
                <div class="list-group list-group-flush" style="max-height: 80vh; overflow-y: auto;">
                    <table class="table table-Secondary table-striped">
                        <thead>
                            <tr>
                                <th scope="col">No</th>
                                <th scope="col">Name</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Item1 != null && Model.Item1.Any())
                            {
                                int index = 1;
                                foreach (var item in Model.Item1)
                                {
                                    <tr>
                                        <th scope="row">@index</th>
                                        <td>@Html.DisplayFor(model => item.Name)</td>
                                        <td>
                                            <a class="btn btn-outline-info btn-sm" asp-controller="categoryarchitecture" asp-action="update"
                                                asp-route-id="@item.Id">Edit</a>

                                            <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal"
                                                data-bs-target="#deleteModal-@item.Id">
                                                Delete
                                            </button>
                                            <div class="modal fade" id="deleteModal-@item.Id" tabindex="-1"
                                                aria-labelledby="deleteModalLabel-@item.Id" aria-hidden="true">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h1 class="modal-title fs-5" id="deleteModalLabel-@item.Id">
                                                                Confirm Deletion</h1>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                                aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            Are you sure you want to delete this item?
                                                        </div>
                                                        <div class="modal-footer">
                                                            <form asp-controller="categoryarchitecture" asp-action="delete"
                                                                asp-route-id="@item.Id" method="post" style="display: inline;">
                                                                @Html.AntiForgeryToken()
                                                                <input type="hidden" name="_method" value="delete" />
                                                                <button type="submit" class="btn btn-danger">Delete</button>
                                                            </form>
                                                            <button type="button" class="btn btn-secondary"
                                                                data-bs-dismiss="modal">Close</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                    index++;
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="3" class="text-center">No data available</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Engineering Tab -->
        <div class="tab-pane fade" id="engineering" role="tabpanel" aria-labelledby="engineering-tab">
