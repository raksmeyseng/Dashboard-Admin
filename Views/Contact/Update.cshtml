@model ArchtistStudio.Modules.Contact.UpdateContactRequest

<div>
    <div class="mx-auto p-3">
        <h2>Edit Contact</h2>
    </div>

    <div class="row pt-3">
        <div class="col-md-12">
            <form asp-action="update" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- First row: Project Name, Location -->
                <div class="row m-1">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" placeholder="Name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="PhoneNumber" class="control-label"></label>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="Phone Number" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Second row: Image URL, Description -->
                <div class="row m-1">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ImagePath" class="control-label"></label>
                            <input type="file" asp-for="ImagePath" class="form-control" placeholder="Upload Image" />
                            <span asp-validation-for="ImagePath" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <textarea asp-for="Email" class="form-control" placeholder="Email"></textarea>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row m-1">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Purpose" class="control-label"></label>
                            <input asp-for="Purpose" class="form-control" placeholder="Purpose">
                            <span asp-validation-for="Purpose" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Message" class="control-label"></label>
                            <input asp-for="Message" class="form-control" placeholder="Message">
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>
                    </div>

                  <div class="d-flex justify-content-end m-1">
                    <button type="submit" class="btn btn-primary m-2">Save changes</button>
                    <a class="btn btn-dark m-2 text-white text-decoration-none" asp-controller="contact"
                        asp-action="profile">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
