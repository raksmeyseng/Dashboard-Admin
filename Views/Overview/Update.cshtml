@model ArchtistStudio.Modules.Overview.UpdateOverviewRequest

<div>
    <h4 class="font-weight-bold py-3 mb-4">
        Edit Overview
    </h4>

    <div class="row pt-2">
        <div class="col-md-12">
            <form asp-controller="overview" asp-action="update" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- First row: Project Name, Location -->
                <div class="row m-1">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" placeholder="Description" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ImagePath" class="control-label"></label>
                            <input type="file" asp-for="ImagePath" class="form-control" placeholder="Upload Image" />
                            <span asp-validation-for="ImagePath" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row m-1">
                    <div class="d-flex justify-content-end m-1">
                        <button type="submit" class="btn btn-primary m-2">Save changes</button>
                        <button type="Cancel" class="btn btn-dark m-2">
                            <a class="text-white text-decoration-none" asp-controller="overview"
                                asp-action="gets">Cancel</a>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
