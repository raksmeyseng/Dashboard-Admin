@model ArchtistStudio.Modules.History.InsertHistoryRequest

<div>
    <h4 class="font-weight-bold py-3 mb-4">
        Insert History
    </h4>
    <div class="row pt-2">
        <div class="col-md-12">
            <form asp-controller="history" asp-action="insert" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
               <div class="row m-1">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                             <textarea asp-for="Name" class="form-control" rows="3"  placeholder="Name" ></textarea>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                                <textarea asp-for="Description" class="form-control" rows="3"  placeholder="Description" ></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-end m-2">
                    <button type="submit" class="btn btn-primary m-2">Save changes</button>
                    <button type="Cancel" class="btn btn-dark m-2">
                        <a class="text-white text-decoration-none" asp-controller="contact"
                            asp-action="profile">Cancel</a>
                    </button>
                </div>
            </form>
        </div>
    </div>

</div>